<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Modifier un concert</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Loading Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
       <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" media="screen" href="css/bootstrap-datetimepicker.min.css">
  
    <!-- Loading Flat UI -->
    <link href="css/flat-ui.css" rel="stylesheet">
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
    <script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places" type="text/javascript"></script>

  </head>

<style type="text/css">
  
#text {
     color: cadetblue;
     font-weight: bold;
  min-width: 30%;
  text-align: left !important;
  font-weight: bold;
}

#text a {
  margin: 6px;
}

#text input {
  width: 100%;
}
.table td, .table th {
    border: none;
}

table.table.table-bordered {
    border: 1px solid white;
}

.navbar a{
    font-size: 20px;
  height: auto;
  padding: 15px 5px;
  font-weight: bold;
}
.navbar-header {
    background-color: white;
}

.monform{
  background-color: white;
  border-radius: 4px;
padding: 8px 20px 8px 8px;
  
}
}
</style>

  <body>
  <nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="dashbord">
        <img alt="CadriJ" src="images\cadrij-small.jpg">
        Modifier un concert CadriJ

      </a>
    </div>
  </div>
</nav>



<div class="container-fluid">

<% result.forEach(function(result) { %>
<div class="monform" id="text">
 <form role="form" action="/editconcert?id=<%= result._id %>" method="post" name ="myform" onsubmit="codeAddress(); return false;">

    <div class="form-group">

      <label for="titre">Titre:</label>
      
        <input type="text" class="form-control" id="titre" name="titre" placeholder="Entrez le titre de l'evenement" value="<%= result.title %>">
      
    </div>



    <div class="form-group">
      <label class="control-label col-sm-2" for="artist">Artiste(s):</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="artist" name="artist" placeholder="Saisissez l'(les) artiste(s) présent(s)" value="<%= result.artist %>">
      </div>
    </div>

        <div class="form-group">
      <label class="control-label col-sm-2" for="adresse">Adresse de l'évennement:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="address" name="address" placeholder="Saisissez l'adresse ou aura lieu l'evenement" value="<%= result.address %> ">
        <input type="hidden" id="lat" name="lat" name="lat">
        <input type="hidden" id="long" name="long" name="long">
         <div id="map_canvas"></div>
      </div>
    </div>

       

          <div class="form-group">
      <label class="control-label col-sm-2" for="date">Date de l'evenement:</label>
             
        <!--<input class="datepicker" type="text" name="date">-->
        <div id="datetimepicker1" class="input-append date">
    <input data-format="dd/MM/yyyy hh:mm:ss" type="text" id="date" name="date" style="width: 12%;
  border-radius: inherit;" value="<%= result.startDate %> "></input>
    <span class="add-on" style ="  height: 25px; padding-top: 10px;">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>
        </div>


    

   <div class="form-group">
      <label class="control-label col-sm-2" for="url">Lien de l'evenement:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="url" name="url" placeholder="Saisissez un lien" value="<%= result.url ? result.url : '' %>">
      </div>
    </div>

    <button type="submit" class="btn btn-default btn-success" >Modifier</button>

  </form>

  <a href="/dashbord" id="opener" class="btn btn-large btn-block btn-warning">Retour au menu principal</a>
</div>
<% }); %>

</div>



    <script src="js/main.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
     src="js/bootstrap-datetimepicker.min.js">
    </script>
 <script type="text/javascript" src="js/autocomp.js">
    </script>
  
<script type="text/javascript">
  $(function() {
    $('#datetimepicker1').datetimepicker({
      language: 'en'
    });
  });
</script>

</body>

</html>